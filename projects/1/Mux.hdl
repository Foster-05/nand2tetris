/** 
 * Multiplexor:
 * if (sel = 0) out = a, else out = b
 */
CHIP Mux {
    IN a, b, sel;
    OUT out;

    PARTS:
    And(a=b, b=sel, out= t01);
    Not(a=sel, out=notsel);
    And(a=a, b=notsel, out=t02);
    Or(a=t01, b=t02, out=out);
}